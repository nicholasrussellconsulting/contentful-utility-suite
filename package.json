    "dependencies": {
        "chalk": "^5.3.0",
        "contentful-management": "^11.40.2",
        "csv-parser": "^3.0.0",
        "inquirer": "^12.2.0"
    },
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/nlowen233/contentful-utility-suite"
